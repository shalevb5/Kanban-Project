<Window x:Class="Frontend.View.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kanban - My Boards" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>

        
        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <EventSetter Event="MouseDoubleClick" Handler="Board_DoubleClick"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,30,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="My Boards" 
                           FontSize="28" 
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding Path=Email, Mode=OneWay, StringFormat='Logged in as: {0}'}" 
                           Margin="0,5,0,0" 
                           Opacity="0.7"/>
            </StackPanel>
            
            

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button Content="Create Board" 
                        Style="{StaticResource ActionButton}"
                        Click="CreateBoard_Click" 
                        Margin="0,0,10,0"/>
                <Button Content="Logout" 
                        Style="{StaticResource ActionButton}"
                        Background="#555555"
                        Click="Logout_Click"/>
            </StackPanel>
        </Grid>

       
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="30,0">
            <ListBox ItemsSource="{Binding Boards}" 
                     SelectedItem="{Binding SelectedBoard, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#DDDDDD" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="20"
                                Margin="0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                
                                <StackPanel Grid.Column="0">
                                    
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"/>

                                    
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,8,0,0">
                                        <TextBlock Text="Owner: " 
                                                   Opacity="0.7"/>
                                        <TextBlock Text="{Binding Path=OwnerEmail, Mode=OneWay}" 
                                                   FontWeight="Medium" 
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                
                                <Button Grid.Column="1"
                                        Content="Open" 
                                        Style="{StaticResource ActionButton}"
                                        Margin="10,0"
                                        VerticalAlignment="Center"
                                        Click="OpenBoard_Click"
                                        CommandParameter="{Binding}"/>

                                <Button Grid.Column="2"
                                        Content="Delete" 
                                        Style="{StaticResource DeleteButton}"
                                        VerticalAlignment="Center"
                                        Click="DeleteBoard_Click"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <Border Grid.Row="2" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0" 
                Padding="30,15">
            <TextBlock Text="© 2025 Kanban Board System" 
                       HorizontalAlignment="Center"
                       Opacity="0.5"/>
        </Border>
    </Grid>
</Window>