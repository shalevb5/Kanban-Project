<Window x:Class="Frontend.View.BoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Board View" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <TextBlock Text="{Binding BoardTitle}" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   DockPanel.Dock="Top"/>

        <Button Content="Add Task"
        Width="120"
        Height="32"
        Margin="10,0,0,10"
        HorizontalAlignment="Left"
        Click="AddTask_Click"
        DockPanel.Dock="Top"/>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="To Do" FontWeight="Bold" FontSize="16" Foreground="Blue" Margin="0 0 0 10"/>
                <ListBox ItemsSource="{Binding Board.BacklogTasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate}" FontSize="10" Foreground="DarkRed"/>
                                    <Button Content="Assign"
                                            Margin="0,0,0,5"
                                            Click="AssignTask_Click"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Advance"
                                            Margin="0,5,0,0"
                                            Click="AdvanceTask_Click"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="In Progress" FontWeight="Bold" FontSize="16" Foreground="Blue" Margin="0 0 0 10"/>
                <ListBox ItemsSource="{Binding Board.InProgressTasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate}" FontSize="10" Foreground="DarkRed"/>
                                    <Button Content="Assign"
                                        Margin="0,0,0,5"
                                        Click="AssignTask_Click"
                                        CommandParameter="{Binding}" />
                                    <Button Content="Advance"
                                            Margin="0,5,0,0"
                                            Click="AdvanceTask_Click"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5">
                <TextBlock Text="Done" FontWeight="Bold" FontSize="16" Foreground="Blue" Margin="0 0 0 10"/>
                <ListBox ItemsSource="{Binding Board.DoneTasks}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate}" FontSize="10" Foreground="DarkRed"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
